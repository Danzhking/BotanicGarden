<Window x:Class="BotanicGarden.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать заказ" Height="400" Width="400">

    <Grid Background="#2c3e50">
        <TextBlock Text="Введите данные для создания заказа:" Margin="10" FontSize="16" FontWeight="Bold" Foreground="AliceBlue"/>
        <!-- Основная структура -->
        <StackPanel Orientation="Vertical" Background="AntiqueWhite" VerticalAlignment="Center" HorizontalAlignment="Stretch">


            <StackPanel Margin="0 30" VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- ФИО покупателя -->
                <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="ФИО покупателя:" FontWeight="Bold" VerticalAlignment="Center" Width="120"/>
                <TextBox Name="CustomerNameTextBox" Width="250" PreviewTextInput="CustomerNameTextBox_PreviewTextInput"/>
            </StackPanel>

            <!-- Почтовый адрес -->
                <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Адрес доставки:" FontWeight="Bold" VerticalAlignment="Center" Width="120"/>
                <TextBox Name="CustomerAddressTextBox" Width="250"/>
            </StackPanel>

            <!-- Электронная почта -->
                <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Электронная почта:" FontWeight="Bold" VerticalAlignment="Center" Width="120"/>
                <TextBox Name="CustomerEmailTextBox" Width="250"/>
            </StackPanel>

            <!-- Телефонный номер -->
                <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Телефонный номер:" FontWeight="Bold" VerticalAlignment="Center" Width="120"/>
                <TextBox Name="CustomerPhoneTextBox" Width="250" PreviewTextInput="CustomerPhoneTextBox_PreviewTextInput" MaxLength="15"/>
            </StackPanel>

            <!-- Форма оплаты -->
                <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Форма оплаты:" FontWeight="Bold" VerticalAlignment="Center" Width="120"/>
                <ComboBox Name="PaymentTypeComboBox" Width="250" SelectionChanged="PaymentTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Предоплата"/>
                    <ComboBoxItem Content="Наложенный платеж"/>
                </ComboBox>
            </StackPanel>
            <!-- Секция с добавлением растений в заказ -->
                <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Растение для заказа:" FontWeight="Bold" VerticalAlignment="Center" Width="120"/>
                <ComboBox Name="InitialPlantComboBox" Width="250" ItemsSource="{Binding Plants}" DisplayMemberPath="Name" SelectedValuePath="PlantID" SelectionChanged="InitialPlantComboBox_SelectionChanged"/>
            </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Количество:" FontWeight="Bold" VerticalAlignment="Center" Width="120"/>
                <ComboBox Name="InitialCountComboBox" Width="250" SelectionChanged="InitialCountComboBox_SelectionChanged_1" ItemsSource="{Binding countOptions}"/>
            </StackPanel>
            <!-- Контейнер для добавленных растений -->
            <StackPanel Name="OrderItemsStackPanel" Margin="10"/>
            <!-- Кнопка отправки заказа -->
                <Button Name="AddPlantButton" Content="Добавить растение" Margin="5" Width="150" Background="#2c3e50" Foreground="White" BorderBrush="#2980b9" BorderThickness="1" Click="AddPlantButton_Click"/>
                <Button Name="SubmitOrderButton" Content="Создать заказ" Margin="5" Width="150" Background="#2c3e50" Foreground="White" BorderBrush="#2980b9" BorderThickness="1" Click="SubmitOrderButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
