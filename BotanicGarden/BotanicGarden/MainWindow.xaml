<Window x:Class="BotanicGarden.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotanicGarden"
        mc:Ignorable="d"
        Title="База Данных ботанического сада" Height="675" Width="950">
    <Grid Background="#f5f5f5">
        <!-- Панель управления -->
        <DockPanel>
            <!-- Верхняя панель с логотипом -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#2c3e50" Height="60">
                <Image Source="/pinpng.com-zombies-png-436619.png" Width="40" Height="40" Margin="10" VerticalAlignment="Center" />
                <TextBlock Text="Ботанический сад" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="White" Margin="5"/>
                <TextBlock Text="Группы растений:" VerticalAlignment="Center" Margin="5" Foreground="White"/>
                <ComboBox Name="PlantGroupsComboBox" Width="200" Margin="5" SelectionChanged="PlantGroupsComboBox_SelectionChanged_1" SelectedItem="Все"/>
                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="5" Foreground="White"/>
                <TextBox Name="SearchTextBox" Width="200" Margin="5"/>
                <Button Name="SearchButton" Content="Найти" Margin="5" Width="80" Click="SearchButton_Click" Background="#3498db" Foreground="White" BorderBrush="#2980b9" BorderThickness="1"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <Grid VerticalAlignment="Top" DockPanel.Dock="Top" MaxHeight="500" Margin="10">
                <Grid.ColumnDefinitions>
                    <!-- Обе колонки занимают одинаковую ширину -->
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Список растений -->
                <ListBox  Name="PlantsListBox" Grid.Column="0" Margin="5,5,5,5" 
                         SelectionChanged="PlantsListBox_SelectionChanged" Background="White" BorderBrush="#2980b9" BorderThickness="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding PhotoPath}" Width="50" Height="50" Margin="5"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="5"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Детальная информация о растении -->
                <Border  Grid.Column="1" Margin="5,5,5,5" Background="White" BorderBrush="#2980b9" BorderThickness="1" Padding="10" >
                    <StackPanel>
                        <TextBlock Text="Информация о растении" FontWeight="Bold" FontSize="16" Margin="5"/>
                        <TextBlock Text="Название:" FontWeight="Bold" Margin="5"/>
                        <TextBlock Name="PlantNameTextBlock" Margin="5"/>
                        <Image x:Name="PlantImage" Width="200" Height="200" Margin="10"/>
                        <TextBlock Text="Описание:" FontWeight="Bold" Margin="5"/>
                        <TextBlock Name="PlantDescriptionTextBlock" Margin="5" TextWrapping="Wrap"/>

                        <TextBlock FontWeight="Bold" Margin="5"><Run Language="ru-ru" Text="Информация для заказа:"/><LineBreak/><Run Language="ru-ru"/></TextBlock>
                        <TextBlock Name="PlantAvailabilityTextBlock" Margin="5"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Нижняя панель управления заказами -->
        </DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Background="#2c3e50" VerticalAlignment="Bottom" Height="60">
            <Button Name="AddOrderButton" Content="Создать заказ" Margin="5" Width="120" Click="AddOrderButton_Click" Background="#3498db" Foreground="White" BorderBrush="#2980b9" BorderThickness="1"/>
            <Button Name="ViewOrdersButton" Content="Просмотреть заказы" Margin="5" Width="150" Click="ViewOrdersButton_Click" Background="#3498db" Foreground="White" BorderBrush="#2980b9" BorderThickness="1"/>
            <Button Name="ViewStatisticsButton" Content="Статистика" Margin="5" Width="100" Click="ViewStatisticsButton_Click" Background="#3498db" Foreground="White" BorderBrush="#2980b9" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>
